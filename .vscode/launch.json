        "version": "0.2.0",
        "configurations": [
          {
            "type": "node",
            "request": "launch",
            "name": "Run Cucumber with HTML Report",
            // "program": "${workspaceFolder}/node_modules/npm/bin/npm-cli.js",
            // "program": "${workspaceFolder}/node_modules/@cucumber/cucumber/bin/cucumber-js",
            "runtimeExecutable": "npm",
            "args": [
              "run",
              "test:report",
              "--",
              // "--tags",
              // "@positive",
              // "features",
              // // "--",
              "--require",
              "features/step_definitions/**/*.js",
              "--format",
              "@cucumber/pretty-formatter",
              "features",
              "--format",
              "json:cucumber_report.json",
              
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
          }
        ]
}